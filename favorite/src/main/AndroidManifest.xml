<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.muhamapps.filmcatalogueapp1.favorite">

    <dist:module
        dist:instant="false"
        dist:title="@string/title_favorite">
        <dist:delivery>
            <dist:install-time />
        </dist:delivery>

        <dist:fusing dist:include="true" />
    </dist:module>

    <application android:fullBackupContent="@xml/backup_descriptor"
        tools:ignore="AllowBackup">
        <activity android:name=".FavoriteFilmActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="filmcatalogueapp1"
                    android:host="favorite"/>
            </intent-filter>
        </activity>
    </application>

</manifest>